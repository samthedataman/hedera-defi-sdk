{
  "name": "hedera-defi-js",
  "version": "1.0.0",
  "description": "Comprehensive Hedera DeFi SDK for JavaScript/TypeScript with 40+ methods for developers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "node test-integration.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepack": "npm run clean && npm run build && npm test",
    "prepublishOnly": "npm run test:integration"
  },
  "keywords": [
    "hedera",
    "defi",
    "sdk",
    "blockchain",
    "saucerswap",
    "bonzo",
    "mirror-node",
    "typescript",
    "javascript",
    "api",
    "dex",
    "lending",
    "yield",
    "hashgraph",
    "hbar",
    "tokens"
  ],
  "author": "Hedera DeFi SDK",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "examples/**/*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hedera-defi/hedera-defi-sdk"
  },
  "bugs": {
    "url": "https://github.com/hedera-defi/hedera-defi-sdk/issues"
  },
  "homepage": "https://github.com/hedera-defi/hedera-defi-sdk#readme"
}